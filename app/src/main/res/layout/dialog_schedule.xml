<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그램 회의"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/complete_schedule"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="@id/tv_modify"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modify_schedule"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_complete"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@id/tv_complete"
        app:layout_constraintBottom_toBottomOf="@id/tv_complete"
        android:layout_marginStart="10dp"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>