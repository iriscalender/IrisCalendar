<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/category"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_purple"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_circle_purple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/view_blue"
        app:layout_constraintTop_toBottomOf="@id/tv_category" />

    <TextView
        android:id="@+id/tv_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/view_purple"
        app:layout_constraintRight_toRightOf="@id/view_purple"
        app:layout_constraintTop_toBottomOf="@id/view_purple" />

    <View
        android:id="@+id/view_blue"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/bg_circle_sky"
        app:layout_constraintBottom_toBottomOf="@id/view_purple"
        app:layout_constraintLeft_toRightOf="@id/view_purple"
        app:layout_constraintRight_toLeftOf="@id/view_pink"
        app:layout_constraintTop_toTopOf="@id/view_purple" />

    <TextView
        android:id="@+id/tv_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/view_blue"
        app:layout_constraintRight_toRightOf="@id/view_blue"
        app:layout_constraintTop_toBottomOf="@id/view_blue" />

    <View
        android:id="@+id/view_pink"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/bg_circle_red"
        app:layout_constraintBottom_toBottomOf="@id/view_blue"
        app:layout_constraintLeft_toRightOf="@id/view_blue"
        app:layout_constraintRight_toLeftOf="@id/view_orange"
        app:layout_constraintTop_toTopOf="@id/view_blue" />

    <TextView
        android:id="@+id/tv_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/view_pink"
        app:layout_constraintRight_toRightOf="@id/view_pink"
        app:layout_constraintTop_toBottomOf="@id/view_pink" />

    <View
        android:id="@+id/view_orange"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/bg_circle_orange"
        app:layout_constraintBottom_toBottomOf="@id/view_pink"
        app:layout_constraintLeft_toRightOf="@id/view_pink"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_pink" />

    <TextView
        android:id="@+id/tv_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/view_orange"
        app:layout_constraintRight_toRightOf="@id/view_orange"
        app:layout_constraintTop_toBottomOf="@id/view_orange" />
</androidx.constraintlayout.widget.ConstraintLayout>
